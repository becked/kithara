{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Default capabilities for Kithara",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"core:path:default",
		"shell:allow-open",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{ "name": "vgmstream-cli", "sidecar": true },
				{ "name": "ffmpeg", "sidecar": true }
			]
		}
	]
}
